[include]
	path = ~/.gitcredentials

[core]
	editor = nvim

[color]
	ui = auto

[alias]
	ad = add
	addd = add
	st = status
	t = status
	ls = status
	co = checkout
	cm = commit
	cma = commit --amend --no-edit
	cmaa = commit -a --amend --no-edit
	cmf = commit --fixup
	cm-m = commit -m
	cp = cherry-pick
	cpa = cherry-pick --abort
	cpc = cherry-pick --continue
	br = branch
	bra = branch -a
	bl = blame
	rb = rebase
	rbi = rebase -i
	rbc = rebase --continue
	rba = rebase --abort
	rbs = rebase --skip
	rv = revert
	rva = revert --abort
	rvc = revert --continue
	rh = reset HEAD
	rhh = reset HEAD~
	dif = diff
	difs = diff --staged
	diffs = diff --staged
	ush = push
	ull = pull
	psuh = push
	tpush = push
	tpull = pull
	ulll = pull
	pul = pull
	pulll = pull
	pra = fetch --all
	push-f = push -f
	pulum = pull upstream master
	bs = bisect
	bsg = bisect good
	bsb = bisect bad
	bsi = bisect start
	bsr = bisect reset
	sohw = show
	hsow = show
	rmeote = remote
	unstash = stash pop
	sm = submodule
	smi = submodule init
	smu = submodule update
	tlog = log
	ref = rev-parse HEAD
	tree = log --oneline --decorate --graph --all
	git = !git

[push]
	default = simple
	followTags = true
	autoSetupRemote = true

[pull]
	rebase = true

[rebase]
	autosquash = true
	autostash = true
	missingCommitsCheck = error
	stat = true

[log]
	showRoot = false

[fetch]
	prune = true

[clean]
	requireForce = false

[merge]
	ff = no

[diff]
	tool = nvimdiff

[difftool]
	prompt = false

[difftool "nvimdiff"]
	cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
